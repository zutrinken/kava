{{!< default}}

{{#post}}

<main class="content" role="main">

	<article class="{{post_class}}">

			<div class="post-header{{#if feature_image}} has-cover{{/if}}">

				<div class="inner">

					<h1 class="post-title">{{{title}}}</h1>

					<span class="post-meta">

						<span class="post-author"><figure class="avatar">{{#if author.profile_image}}<img src="{{author.profile_image}}" alt="{{author.name}}" />{{/if}}</figure> {{author}}</span>

						<span class="post-date">{{date format="DD MMM YYYY"}} </span>

						<span class="post-reading-time">{{reading_time}}</span>

						<span class="post-tags">{{tags separator=", "}}</span>

					</span>

				</div>

				{{#if feature_image}}
					<div class="post-cover" style="background-image: url('{{img_url feature_image}}');"></div>
				{{/if}}

			</div>

			<div class="inner">
				<section class="post-content">
					{{content}}
				</section>

				<div class="post-footer">

					<div class="post-tags">
						{{tags separator=" "}}
					</div>

					<div class="post-share">
						<a class="icon-twitter" href="https://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
							<span>Twitter</span>
						</a>

						<a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
							<span>Facebook</span>
						</a>

						<a class="icon-googleplus" href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
							<span>Google+</span>
						</a>
					</div>

				</div>

				<div class="post-comments">
					<div id="disqus_thread"></div>
				</div>



				<div class="post-nav">

					{{#next_post}}
						<a class="post-nav-item post-nav-next" href="{{url}}" title="{{title}}">
							<span class="post-nav-post">

								<h4 class="post-nav-title">{{title}}</h4>

								<p class="post-nav-excerpt">{{excerpt words="19"}}&hellip;</p>
							</span>
						</a>
					{{/next_post}}

					{{#prev_post}}
						<a class="post-nav-item post-nav-prev" href="{{url}}" title="{{title}}">
							<span class="post-nav-post">

								<h4 class="post-nav-title">{{title}}</h4>

								<p class="post-nav-excerpt">{{excerpt words="19"}}&hellip;</p>

							</span>
						</a>
					{{/prev_post}}

				</div>

			</div>

	</article>

</main>

{{/post}}
