{{!< default}}

{{#post}}

<article class="{{post_class}}">
		<div class="post-header{{#if feature_image}} has-cover{{/if}}">
			<div class="inner">
				<h1 class="post-title">{{{title}}}</h1>
				<span class="post-meta">
					<span class="post-meta-date">{{date format="DD MMM YYYY"}}</span>
					<span class="post-meta-author"><figure class="avatar">{{#if primary_author.profile_image}}<img src="{{primary_author.profile_image}}" alt="{{primary_author.name}}" />{{/if}}</figure>{{primary_author.name}}</span>
					{{#if tags}}<span class="post-meta-tags">{{tags separator=", "}}</span>{{/if}}
				</span>
			</div>
			{{#if feature_image}}
				<div class="post-cover" style="background-image: url('{{img_url feature_image}}');"></div>
			{{/if}}
		</div>
		<div class="inner">
			<section class="post-content">
				{{content}}
			</section>
			{{#if @labs.subscribers}}
			<section class="post-subscribe">
					<span class="post-subscribe-label">{{t "Subscribe"}}</span>
          <span class="post-subscribe-info">Get the latest posts delivered right to your inbox</span>
					{{subscribe_form placeholder="Your email address" form_class="post-subscribe-form" input_class="post-subscribe-input" button_class="post-subscribe-button"}}
			</section>
			{{/if}}
			<div class="post-share">
				<span class="post-share-label">{{t "Share"}}</span>
				<ul class="post-share-list">
					<li>
						<a class="icon-twitter" href="https://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
							<span>Twitter</span>
						</a>
					</li>
					<li>
						<a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
							<span>Facebook</span>
						</a>
					</li>
					<li>
						<a class="icon-googleplus" href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
							<span>Google+</span>
						</a>
					</li>
				</ul>
			</div>
			{{#primary_author}}
			<aside class="post-author">
				<span class="post-author-label">{{t "Author"}}</span>
				<figure class="post-author-avatar avatar">
					{{#if profile_image}}
						<img src="{{profile_image}}" alt="{{name}}" />
					{{/if}}
				</figure>
				<div class="post-author-info">
					<h4 class="post-author-name">{{name}}</h4>
					{{#if bio}}
						<p class="post-author-biografie">{{{bio}}}</p>
					{{/if}}
					<p class="post-author-meta author-meta">
						{{#if website}}
						<span class="author-website"><a target="_blank" href="{{website}}">Website</a></span>
						{{/if}}
						{{#if twitter}}
						<span class="author-twitter"><a target="_blank" href="https://twitter.com/{{twitter}}">Twitter</a></span>
						{{/if}}
						{{#if facebook}}
						<span class="author-facebook"><a target="_blank" href="https://facebook.com/{{facebook}}">Facebook</a></span>
						{{/if}}
					</p>
					<p class="author-more">
						<a href="{{url}}">{{t "Read more"}}</a>
					</p>
				</div>
			</aside>
			{{/primary_author}}
			<div class="post-comments">
				<span class="post-comments-label">{{t "Comments"}}</span>
				<div id="disqus_thread"></div>
			</div>
			<div class="post-nav">
				{{#next_post}}
					<a class="post-nav-item post-nav-next" href="{{url}}" title="{{title}}">
						<span class="post-nav-post">
							<span class="post-nav-type">{{t "Next"}}</span>
							<h4 class="post-nav-title">{{title}}</h4>
							<p class="post-nav-excerpt">{{excerpt words="19"}}&hellip;</p>
						</span>
					</a>
				{{/next_post}}
				{{#prev_post}}
					<a class="post-nav-item post-nav-prev" href="{{url}}" title="{{title}}">
						<span class="post-nav-post">
							<span class="post-nav-type">{{t "Previous"}}</span>
							<h4 class="post-nav-title">{{title}}</h4>
							<p class="post-nav-excerpt">{{excerpt words="19"}}&hellip;</p>
						</span>
					</a>
				{{/prev_post}}
			</div>
		</div>
</article>
{{/post}}
