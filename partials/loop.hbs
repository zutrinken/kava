<div class="post-list" role="main">
	{{#foreach posts}}
	<article class="{{post_class}}">
			{{#if feature_image}}
				<a href="{{url absolute="true"}}">
					<figure class="post-image" style="background-image: url('{{img_url feature_image}}');"></figure>
				</a>
			{{/if}}
			<h2 class="post-title"><a href="{{url absolute="true"}}">{{{title}}}</a></h2>
			<span class="post-meta">
				{{t "On"}}  <span class="post-meta-date">{{date format="DD MMM YYYY"}}</span> {{t "by"}} <span class="post-meta-author">{{authors}}</span>
			</span>
			<p class="post-excerpt">{{excerpt words="25"}} &hellip; <a href="{{url absolute="true"}}">{{t "Read more"}}</a></p>
	</article>
	{{/foreach}}
</div>
{{pagination}}
