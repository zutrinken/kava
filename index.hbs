{{!< default}}

<div id="header" class="header{{#if @site.cover_image}} has-cover{{/if}}">
	<div class="inner">
		{{#if @site.cover_image}}
			<div class="header-cover" style="background-image: url({{@site.cover_image}})"></div>
		{{/if}}
		<div class="header-title" href="{{@site.url}}">
			{{#if @site.logo}}
				<figure class="header-logo">
					<img src="{{@site.logo}}" alt="Logo" />
				</figure>
			{{/if}}
			<h1 class="header-name">{{@site.title}}</h1>
			{{#if @site.description}}
				<span class="header-description">{{@site.description}}</span>
			{{/if}}
		</div>
	</div>
</div>
<div id="posts">
	<div class="inner">
		{{> "loop"}}
	</div>
</div>
